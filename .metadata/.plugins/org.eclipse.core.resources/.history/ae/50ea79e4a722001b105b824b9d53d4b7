public class BankingApplication extends Acount{
	
	
	static Scanner scan = new Scanner(System.in);

	public static void createId(List<Acount>lists, Map<String, String>maps) {
		Acount user = new Acount();
		user.userAdd();
		maps.put(user.getCustomerId(), user.getCustomerPw());
	}
	public static void deposit(Map<String,String> lists) {
		System.out.printf("이름: ");
		String idsearch = scan.nextLine();
		if(lists.containsKey(idsearch)) {
			System.out.printf("패스워드: ");
			String pwsearch = scan.nextLine();
			if(idsearch.equals(lists.get(pwsearch))) {
				System.out.println("로그인 성공!");
				System.out.printf("입금금액: ");
				lists.setAddBalance = scan.nextInt();
			}else {
				System.out.println("패스워드가 틀렸습니다.");
			}
		}else {
			System.out.println("없는 ID 입니다.");
		}
		
		
		
		
	}
